<Window x:Class="RealEstateProject.Specification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateProject"
        mc:Ignorable="d"
        Closing="DataWindow_Closing" 
        WindowStartupLocation="CenterScreen"
        Title="Specification" MinHeight="600" MinWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="100"/>
            <ColumnDefinition MaxWidth="150"/>
            <ColumnDefinition MaxWidth="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!--Rodzaj-->
        <TextBlock x:Name="TextBlockType" Grid.Row="0" Grid.Column="0" Text="Rodzaj:"/>
        <TextBlock x:Name="TextBlockTypeSpecification" Grid.Row="0" Grid.Column="1" Text="Binding:"/>
        <!--Miasto-->
        <TextBlock x:Name="TextBlockCity" Grid.Row="1" Grid.Column="0" Text="Miasto:"/>
        <TextBlock x:Name="TextBlockCitySpecification" Grid.Row="1" Grid.Column="1" Text="Binding:"/>
        <!--Cena-->
        <TextBlock x:Name="TextBlockPrice" Grid.Row="2" Grid.Column="0" Text="Cena:"/>
        <TextBlock x:Name="TextBlockPriceSpecification" Grid.Row="2" Grid.Column="1" Text="Binding:"/>
        <!--Czynsz-->
        <TextBlock x:Name="TextBlockRent" Grid.Row="3" Grid.Column="0" Text="Czynsz:"/>
        <TextBlock x:Name="TextBlockRentSpecification" Grid.Row="3" Grid.Column="1" Text="Binding:"/>
        <!--Rynek-->
        <TextBlock x:Name="TextBlockMarket" Grid.Row="4" Grid.Column="0" Text="Rynek:"/>
        <TextBlock x:Name="TextBlockMarketSpecification" Grid.Row="4" Grid.Column="1" Text="Binding:"/>
        <!--Powierzchnia-->
        <TextBlock x:Name="TextBlockSurface" Grid.Row="5" Grid.Column="0" Text="Powierzchnia:"/>
        <TextBlock x:Name="TextBlockSurfaceSpecification" Grid.Row="5" Grid.Column="1" Text="Binding:"/>
        <!--Piętra-->
        <TextBlock x:Name="TextBlockFloors" Grid.Row="6" Grid.Column="0" Text="Piętro:"/>
        <TextBlock x:Name="TextBlockFloorsSpecification" Grid.Row="6" Grid.Column="1" Text="Binding:"/>
        <!--Szczegóły-->
        <TextBlock x:Name="TextBlockDetails" Grid.Row="7" Grid.Column="0" Text="Szczegóły:"/>
        <TextBlock x:Name="TextBlockDetailsSpecification" Grid.Row="7" Grid.Column="1" Text="Binding:"/>
        <!--Pokoje-->
        <TextBlock x:Name="TextBlockRooms" Grid.Row="8" Grid.Column="0" Text="Ilość pokoi:"/>
        <TextBlock x:Name="TextBlockRoomsSpecification" Grid.Row="8" Grid.Column="1" Text="Binding:"/>
        
        <!--Dla admina-->

        <!--Rodzaj-->
        <StackPanel x:Name="StackPanelType" Grid.Row="0" Grid.Column="2">
            <ComboBox x:Name="ComboBoxType">
                <ComboBoxItem Content="Dom"/>
                <ComboBoxItem Content="Mieszkanie"/>
                <ComboBoxItem Content="Działka"/>
            </ComboBox>
        </StackPanel>
        <!--Miasto-->
        <StackPanel x:Name="StackPanelCity" Grid.Row="1" Grid.Column="2">
            <ComboBox x:Name="ComboBoxCity">
                <ComboBoxItem Content="Białystok"/>
                <ComboBoxItem Content="Moskwa"/>
                <ComboBoxItem Content="Buenos Aires"/>
            </ComboBox>
        </StackPanel>
        <!--Cena-->
        <TextBox x:Name="TextBoxPriceSelect" Grid.Row="2" Grid.Column="2"/>
        <!--Czynsz-->
        <TextBox x:Name="TextBoxRentSelect" Grid.Row="3" Grid.Column="2"/>
        <!--Rynek-->
        <StackPanel x:Name="StackPanelMarket" Grid.Row="4" Grid.Column="2">
            <ComboBox x:Name="ComboBoxMarket">
                <ComboBoxItem Content="Pierwotny"/>
                <ComboBoxItem Content="Wtórny"/>
            </ComboBox>
        </StackPanel>
        <!--Powierzchnia-->
        <TextBox x:Name="TextBoxSurfaceSelect" Grid.Row="5" Grid.Column="2"/>
        <!--Piętra-->
        <TextBox x:Name="TextBoxFloorsSelect" Grid.Row="6" Grid.Column="2"/>
        <!--Szczegóły-->
        <StackPanel x:Name="StackPanelDetails" Grid.Row="7" Grid.Column="2">
            <ComboBox x:Name="ComboBoxDetails">
                <ComboBoxItem Content="Piec węglowy"/>
                <ComboBoxItem Content="Piec elektryczny"/>
                <ComboBoxItem Content="Piec na pellet"/>
            </ComboBox>
        </StackPanel>
        <!--Pokoje-->
        <TextBox x:Name="TextBoxRoomsSelect" Grid.Row="8" Grid.Column="2"/>
        
        <!--Wróć do menu-->
        <Button x:Name="ButtonBackToMainMenu" Grid.Row="9" Grid.Column="0" MaxHeight="30" MaxWidth="90" VerticalAlignment="Top" Margin="0 5" Content="Wróć do menu" Click="ButtonBackToMainMenu_Click"/>
        <!--Usuń - dla admina-->
        <Button x:Name="ButtonDeleteProduct" Grid.Row="9" Grid.Column="1" MaxHeight="30" MaxWidth="90" VerticalAlignment="Top" Margin="0 5" Content="Usuń" Click="ButtonDeleteProduct_Click"/>
        <!--Dodaj - dla admina-->
        <Button x:Name="ButtonAddProduct" Grid.Row="9" Grid.Column="2" MaxHeight="30" MaxWidth="90" VerticalAlignment="Top" Margin="0 5" Content="Dodaj" Click="ButtonAddProduct_Click"/>
    </Grid>
</Window>
